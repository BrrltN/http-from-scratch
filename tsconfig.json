{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "app",
        "config",
    ],
    "exclude": [
        "node_modules"
    ]
}